@model webspare.Models.Dathang

@{
    ViewData["Title"] = "Xacnhandathang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Xác nhận đặt hàng</title>
<style>
    .col-5 {
        text-align: center;
    }

    .col-7 {
        text-align: center;
    }
</style>
<section class="content-header">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Xác nhận đã đặt hàng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="javascript: history.go(-1)">Lịch sử đặt hàng</a></li>
                        <li class="breadcrumb-item active">Xác nhận</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <form asp-controller="Home" asp-action="Xacnhandathang" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Maker" />
            <input type="hidden" asp-for="Donvi" />
            <input type="hidden" asp-for="Dongia" />
            <input type="hidden" asp-for="Thanhtien" />
            <input type="hidden" asp-for="Nguoidathang" />
            <input type="hidden" asp-for="Image" />
            <input type="hidden" asp-for="Ngayhangve" />
            <input type="hidden" asp-for="Soluongtonkho" />

            <input type="hidden" asp-for="Ngaydathang" value="@DateTime.Now.ToString("yyyy/MM/dd")" />

            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="card shadow">

                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-5 col-form-label">Model</label>
                                <div class="col-7">
                                    <input asp-for="Model" class="form-control" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-5 col-form-label">Ngày yêu cầu</label>
                                <div class="col-7">
                                    <input asp-for="Ngayyeucau" class="form-control" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-5 col-form-label">Tên linh kiện</label>
                                <div class="col-7">
                                    <input asp-for="Tenlinhkien" class="form-control" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-5 col-form-label">Mã linh kiện</label>
                                <div class="col-7">
                                    <input asp-for="Malinhkien" class="form-control" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-5 col-form-label">Ghi chú</label>
                                <div class="col-7">
                                    <input asp-for="Ghichu" class="form-control" readonly="readonly" />
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-5 col-form-label">Trạng thái</label>
                                <div class="col-7">
                                    <input asp-for="Trangthai" class="form-control" readonly="readonly" value="Đang đặt hàng" />
                                </div>
                            </div>
                            <div class="card bg-lightblue">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label class="col-5 col-form-label">Số lượng đặt hàng</label>
                                        <div class="input-group col-7">
                                            <input asp-for="Soluong" class="form-control"  />
                                            <div class="input-group-append">
                                                <span class="input-group-text">@Model.Donvi</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row" style="margin-top: 10px">
                                        <label class="col-5 col-form-label">Ngày dự kiến hàng về</label>
                                        <div class="col-7">
                                            <div class="input-group date" id="ngaydukienhangve" data-target-input="nearest">
                                                <input asp-for="Ngaydukienhangve" type="text" name="ngaydukienhangve" class="form-control datetimepicker-input" data-target="#ngaydukienhangve" required="@(true)">
                                                <div class="input-group-append" data-target="#ngaydukienhangve" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-default" href="javascript: history.go(-1)"><i class="fa fa-arrow-left"></i> Quay lại</a>
                            <button type="submit" class="btn btn-success float-right "><i class="fa fa-check"> </i> Xác nhận</button>
                        </div>
                    </div>
                </div>
                @if (Model.Image != null)
                {
                    <div class="col-sm-12 col-md-6">
                        <div class="card shadow">
                            <div class="card-body">
                                <img src="@Url.Content(Model.Image)" alt="Image" style="width:100%" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </form>
    </div>
</section>




